[Unit]
Description=Vintage Pi TV
After=udiskie.service

[Service]
Type=simple
Environment=XDG_RUNTIME_DIR=/run/user/1000
ExecStart=/opt/vintage-pi-tv/.venv/bin/tv --port 80 --wait-for-config-seconds 5
ExecStartPre=systemctl --user start pipewire pipewire-pulse
ConditionPathExists=/run/user/1000/pipewire-0
#StandardInput=tty-force
#StandardOutput=tty-force
#TTYReset=yes
Restart=always
RestartSec=3
User=1000
AmbientCapabilities = CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target
